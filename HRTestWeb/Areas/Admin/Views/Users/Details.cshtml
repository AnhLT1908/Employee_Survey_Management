@model HRTestWeb.Areas.Admin.Controllers.UserDetailsVM
@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <h4 class="mb-3">Chi tiết người dùng</h4>
    <div class="card">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phòng ban</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                <dt class="col-sm-3">Vai trò</dt>
                <dd class="col-sm-9">@string.Join(", ", Model.Roles)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Users" asp-action="Index">← Quay lại</a>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">Sửa</a>
        <a class="btn btn-danger" asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id">Xoá</a>
    </div>
</div>
