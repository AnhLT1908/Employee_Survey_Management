@model HRTestWeb.ViewModels.Account.ForgotPasswordResetViewModel
@{
    ViewData["Title"] = "Đặt mật khẩu mới";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="auth-wrap d-flex align-items-center justify-content-center">
    <div class="auth-card card shadow-sm">
        <div class="card-body p-4 p-md-5">
            <h5 class="text-center fw-semibold mb-3">Đặt mật khẩu mới</h5>

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Token" />

                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="form-floating mb-3">
                    <input asp-for="NewPassword" class="form-control" placeholder="••••••" />
                    <label asp-for="NewPassword"></label>
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••" />
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button class="btn btn-primary w-100">Cập nhật mật khẩu</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Login" class="link-secondary text-decoration-none small">Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
