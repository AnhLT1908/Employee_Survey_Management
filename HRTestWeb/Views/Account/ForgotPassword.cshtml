@model HRTestWeb.ViewModels.Account.ForgotPasswordEmailViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="auth-wrap d-flex align-items-center justify-content-center">
    <div class="auth-card card shadow-sm">
        <div class="card-body p-4 p-md-5">
            <h5 class="text-center fw-semibold mb-3">Quên mật khẩu</h5>
            @if (TempData["Info"] is string info)
            {
                <div class="alert alert-info">@info</div>
            }
            @if (TempData["Error"] is string err)
            {
                <div class="alert alert-danger">@err</div>
            }

            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="name@company.com" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button class="btn btn-primary w-100">Gửi mã OTP</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Login" class="link-secondary text-decoration-none small">Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
