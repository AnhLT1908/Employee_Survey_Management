@model HRTestWeb.ViewModels.Account.ForgotPasswordVerifyViewModel
@{
    ViewData["Title"] = "Xác nhận OTP";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="auth-wrap d-flex align-items-center justify-content-center">
    <div class="auth-card card shadow-sm">
        <div class="card-body p-4 p-md-5">
            <h5 class="text-center fw-semibold mb-3">Nhập mã OTP</h5>

            @if (TempData["Error"] is string err)
            {
                <div class="alert alert-danger">@err</div>
            }

            <form asp-action="VerifyOtp" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Email" />

                <div class="mb-2 small text-muted">Mã OTP đã được gửi đến: <b>@Model.Email</b></div>
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Code" class="form-control" placeholder="123456" maxlength="6" />
                    <label asp-for="Code"></label>
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>

                <button class="btn btn-primary w-100">Xác nhận</button>
            </form>

            <div class="mt-3 text-center small">
                Chưa nhận được mã?
                <a asp-action="ForgotPassword" asp-route-email="@Model.Email" class="link-secondary">Gửi lại</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
