@using Microsoft.AspNetCore.Authentication
@inject IAuthenticationSchemeProvider Schemes

@{
    var all = await Schemes.GetAllSchemesAsync();
    var hasGoogle = all.Any(s => s.Name == "Google");
}

@if (hasGoogle)
{
    <div class="text-center text-muted my-3">Hoặc đăng nhập bằng</div>
    <form asp-controller="Account" asp-action="ExternalLogin" method="post" class="d-grid">
        @Html.AntiForgeryToken()
        <button type="submit" name="provider" value="Google" class="btn btn-outline-secondary">
            Google
        </button>
    </form>
}
